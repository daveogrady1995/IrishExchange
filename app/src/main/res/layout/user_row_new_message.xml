<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageview_new_message"
            app:civ_border_width="2dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"/>

        <LinearLayout
            android:id="@+id/linearlayout_new_message_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/username_textview_newmessage"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Beginner"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/irish_level_textview_newmessage"
                android:drawableLeft="@drawable/ic_irish_level"
                android:drawableStart="@drawable/ic_irish_level" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Location"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_new_message"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/location_textview_newmessage"
                android:drawableLeft="@drawable/ic_location_pin"
                android:drawableStart="@drawable/ic_location_pin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/online_status_imaageview_newmessage"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/ic_green_online_icon"
                android:contentDescription="@string/search_users_online_status_image_desc"
                android:text="dasdadasd" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="1dp"
        android:background="#ebebeb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>